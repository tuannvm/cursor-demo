{
  "name": "terminal-command-integration-tests",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for Terminal Command Integration system",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration",
    "test:security": "jest tests/security",
    "test:performance": "jest tests/performance",
    "test:e2e": "jest tests/e2e",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security && npm run test:performance && npm run test:e2e",
    "security-scan": "node test-utils/security-scanner.js",
    "performance-benchmark": "node test-utils/performance-benchmark.js",
    "coverage": "jest --coverage && open coverage/lcov-report/index.html"
  },
  "dependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "shelljs": "^0.8.5",
    "node-pty": "^1.0.0",
    "docker-compose": "^0.24.2",
    "axios": "^1.5.0",
    "puppeteer": "^21.3.6"
  },
  "devDependencies": {
    "eslint": "^8.49.0",
    "prettier": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.ts", "**/tests/**/*.spec.ts"],
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "test-utils/**/*.{ts,js}",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
